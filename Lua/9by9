currslot = 1
 
function Place(y)
  for x = 1, y, 1 do
    if (turtle.getItemCount(currslot) == 0) then
       currslot = currslot + 1
       turtle.select(currslot)
    end
    if (turtle.placeDown()==false) then
      turtle.digDown()
      turtle.placeDown()
      end
   
    while (turtle.forward()==false) do
      turtle.dig()
    end
  end
end
 
function Floor()
  for k=1,4 do
    Place(8)
    turtle.turnRight()
    Place(1)
    turtle.turnRight()
    Place(8)
    turtle.turnLeft()
    Place(1)
    turtle.turnLeft()
  end
  Place(9)
  turtle.back()
  turtle.turnRight()
  turtle.turnRight()
end  
   
 
function Walls()
  turtle.up()
  Place(8)
  turtle.turnRight()
  Place(8)
  turtle.turnRight()
  Place(8)
  turtle.turnRight()
  Place(8)
  turtle.turnRight()
end
 
function GlassRow()
  Place(2)
  turtle.select(16)
  Place(2)
  turtle.select(currslot)
  Place(1)
  turtle.select(16)
  Place(2)
  turtle.select(currslot)
  Place(1)
end
 
 
function Roof()
  turtle.up()
  Place(8)
  turtle.turnRight()
  Place(1)
  turtle.turnRight()
  Place(8)
  turtle.turnLeft()
  Place(1)
  turtle.turnLeft()
  GlassRow()
  turtle.turnRight()
  Place(1)
  turtle.turnRight()
  GlassRow()
  turtle.turnLeft()
  Place(1)
  turtle.turnLeft()
  Place(8)
  turtle.turnRight()
  Place(1)
  turtle.turnRight()
  GlassRow()
  turtle.turnLeft()
  Place(1)
  turtle.turnLeft()
  GlassRow()
  turtle.turnRight()
  Place(1)
  turtle.turnRight()
  Place(8)
  turtle.turnLeft()
  Place(1)
  turtle.turnLeft()
  Place(8)
  turtle.turnRight()
  Place(1)
end
 
if (turtle.getItemCount(1) <64) then
   print("Needs 64 blocks in slot 1")
   return
end
if (turtle.getItemCount(2) <64) then
   print("Needs 64 blocks in slot 2")
   return
end
if (turtle.getItemCount(3) <64) then
   print("Needs 64 blocks in slot 3")
   return
end
if (turtle.getItemCount(4) == 0) then
   print("Needs at least 1 block in slot 4")
   return
end
if (turtle.getItemCount(16) <16) then
   print("Needs at least 16 blocks in slot 16")
   return
end
 
turtle.select(currslot)
 
Floor()
for x = 1, 5, 1 do
  Walls()
end
Roof()
